<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.michaeljeffress.project3.DetailsActivity">

    <TextView
        android:id="@+id/textView_Details_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/textView_Details_Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView_Details_Name"
        android:text="description"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView_Details_Address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView_Details_Description"
        android:text="address"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView_Details_Hotness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="@string/hotnesslvl"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView_Details_HotnessData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView_Details_Hotness"
        android:layout_below="@+id/textView_Details_Hotness"
        android:text="hotness data"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView_Details_Phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView_Details_Description"
        android:text="phone number"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView_Details_Pictures"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@color/colorPrimary"
        android:text="@string/pictures"
        android:textSize="20dp" />

    <ListView
        android:id="@+id/listView_Details_Pictures"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/yelpLogo"
        android:layout_below="@+id/textView_Details_Pictures">

    </ListView>

    <ImageView
        android:id="@+id/yelpLogo"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:src="@drawable/yelp_powered_btn_dark_2x" />

</RelativeLayout>
